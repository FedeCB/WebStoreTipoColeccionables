                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>



                <div class="collapse navbar-collapse" id="navbarScroll" style="font-family: Bangers; font-size:xx-large;">
                    <ul class="nav me-auto my-2 my-lg-0 navbar-nav-scroll gap-5" style="--bs-scroll-height: 100px;">
                        <li class="nav-item "><a class="nav-link">@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { style = "text-decoration:none; height: 60px;" })</a></li>
                        <li class="nav-item "><a class="nav-link">@Html.ActionLink("Acerca de", "About", "Home", new { area = "" }, new { style = "text-decoration:none; " })</a></li>
